            <Insets />
         </VBox.margin>
      </Pane>
      <Label fx:id="event_name_label" prefWidth="206.0" text="Eyal Golan" textFill="#ffffff">
         <font>
            <Font name="System Bold" size="29.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </Label>
      <Label fx:id="price_label" prefWidth="206.0" text="120 nis" textFill="#242424">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </Label>
      <Label fx:id="venue_label" prefWidth="206.0" text="Park H'yarkon" textFill="#242424">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
      <Label fx:id="date_label" prefWidth="206.0" text="01/06/2024  |  20:00" textFill="#242424">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </Label>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" top="20.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <stylesheets>
      <URL value="@../styles.css" />
   </stylesheets>
</fx:root>